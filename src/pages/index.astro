---
import MainHead from "../components/MainHead.astro";
import Pill from "../components/Pill/index.jsx";
import Nav from "../components/Nav/index.jsx";
import Footer from "../components/Footer/index.astro";

const techs = [
  "Html/Css",
  "Javascript",

  "Bootstrap",
  "Tailwind CSS",
  "Sass/Scss",

  "React",
  "Svelte",
  "Vue",
  "Next Js (React framework)",

  "Nodejs",
  "Express",
  "SQLite",
  "MongoDb",

  "Haskell",
];

const featuredProject = [
  {
    title: "2048 game",
    desc: "2048 game is a fun game where we control the blocks laid on 4x4 board. When we combine two blocks they get combined and its value get changed to the next power of 2. Doing this process we intend to create 2048.",
    link: "https://www.github.com/kaustubh-2406/",
  },
  {
    title: "Game of life",
    desc: "Game of life is a cellular automation devised by British mathematician. There is no win or lose, it is just for stimutaion purpose. In it a population of cells are selected at random and rules dictate wheather they would survive for next genration or not. Build with react",
    link: "https://www.github.com/kaustubh-2406/",
  },
  {
    title: "Tracky - Time tracking extension for Chrome",
    desc: "It is a time tracking extension for chromium browsers. It is one of my first projects.",
    link: "https://www.github.com/kaustubh-2406",
  },
  // {title: 'Maze game in Svelte', desc: 'It is similar to the mazes in the newspapers where we need to find the way out.', link: 'https://www.github.com/kaustubh-2406'},
];
---

<html lang="en">
  <head>
    <MainHead
      title="Portfolio | Kaustubh"
      description="Kaustubh: Developer, Learner, and UI/UX Enthusiast..."
    />

    <style>
      .gradient,
      .gradient2 {
        background-image: url("/assets/mesh-gradient.jpg");
        background-size: cover;
        pointer-events: none;
        mix-blend-mode: screen;
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        z-index: 2;
      }

      .gradient2 {
        opacity: 0.85;
        mix-blend-mode: multiply;
        background-size: cover;
      }
    </style>
  </head>
  <body>
    <Nav active="home" />
    <div class="pt-24"></div>
    <header>
      <div class="relative">
        <img
          class="img min-w-3/5 h-auto sm:w-full sm:h-auto mx-auto"
          src="/assets/home.jpg"
        />
        <div class="gradient"></div>
        <div class="gradient2"></div>
        <div class="absolute sm:mx-32 sm:p-8 top-8 sm:top-1/3 m-8 z-10">
          <p class="text-xl font-semibold sm:font-normal sm:text-5xl">
            Hi! I'm Kaustubh.
          </p>
          <h3 class="text-lg max-w-sm sm:max-w-md sm:text-2xl sm:mt-3">
            I create user interfaces and experiences that you remember.
          </h3>
          <a
            href="https://www.github.com/kaustubh-2406"
            target="_blank"
            class="inline-block bg-blue-500 my-2 px-4 py-2 rounded text-sm sm:text-md"
          >
            Visit github
          </a>
        </div>
      </div>
    </header>
    <main class="wrapper m-8 sm:mx-32 sm:p-6">
      <section class="main-sec">
        <h3 class="text-2xl font-semibold my-8 mt-16">
          Technologies familier:
        </h3>
        <div style="display: flex; gap: 10px; flex-wrap: wrap">
          {techs.map((tech) => <Pill rounded content={tech} color="#ffdbcf" />)}
        </div>
        <div class="my-8">
          <h3 class="text-2xl font-semibold">Some projects</h3>
          <div>
            {
              featuredProject.map((project) => (
                <div class="py-4">
                  <h5 class="text-xl mb-2">{project.title}</h5>
                  <p class="text-md">{project.desc}</p>
                </div>
              ))
            }
          </div>
        </div>
        <p>
          You can find my resume
          <a
            target="_blank"
            class="text-purple-600 underline"
            href="/kaustubh_resume.pdf"
            download
          >
            here
          </a>
        </p>
      </section>
    </main>
    <Footer />
  </body>
</html>
